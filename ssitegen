import argparse

parser = argparse.ArgumentParser(add_help=True, description="A simple static site generator")

init_opts = parser.add_mutually_exclusive_group()
init_opts.add_argument('-i', '--initialize', action='store_true', dest='initialize',
                   default=False, help="Initialize a directory structure for the input files")

gen_opts = parser.add_mutually_exclusive_group()
gen_opts.add_argument('-g', '--generate', action='store_true', dest='generate',
                      default=False, help="Generate output files from the input files")

parser.parse_args()
